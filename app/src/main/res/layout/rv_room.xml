<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?listPreferredItemHeight"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"> <!--?android:attr/listPreferredItemHeight-->

    <android.support.v7.widget.CardView
        android:id="@+id/cv_Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2.5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <ImageView
                android:id="@+id/iv_Room"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@+id/tv_RoomName"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="#58548A"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>